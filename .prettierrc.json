{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "singleAttributePerLine": false,
  "vueIndentScriptAndStyle": true,
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": ["*.scss", "*.css"],
      "options": {
        "singleQuote": false,
        "bracketSpacing": true,
        "printWidth": 100,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.vue"],
      "options": {
        "parser": "vue"
      }
    }
  ]
}
